<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_columnWeight">1</item>
<!--        <item name="android:layout_margin">0.5dp</item>-->
        <item name="android:fontFamily">casual</item>
        <item name="android:background">@color/colorMaterialDarkGrey</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_Op">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle"></item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_columnWeight">1</item>
<!--        <item name="android:layout_margin">0.0dp</item>-->
        <item name="android:background">@color/colorMaterialDarkGrey</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button_Grad">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle"></item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_columnWeight">1</item>
        <!--        <item name="android:layout_margin">0.0dp</item>-->
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button_Science">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle"></item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_columnWeight">1</item>
        <!--        <item name="android:layout_margin">0.0dp</item>-->
        <item name="android:background">@color/colorBluePrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
</resources>
